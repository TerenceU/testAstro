---
// Esempio di utilizzo della BaseInput con auto-completion
import BaseInput from '../components/inputs/BaseInput.astro';
---

<html>
<head>
    <title>Esempio BaseInput</title>
</head>
<body>
    <!-- Ora quando scrivi <BaseInput dovresti vedere l'auto-completion delle props -->
    
    <!-- Input di testo base -->
    <BaseInput 
        type="text"
        placeholder="Inserisci il tuo nome"
        required={true}
        minLength={2}
        maxLength={50}
        showCounter={true}
        animatedLabel={true}
        label="Nome"
    />
    
    <!-- Input email con validazione -->
    <BaseInput 
        type="email"
        placeholder="email@esempio.com"
        required={true}
        showErrors={true}
        animatedLabel={true}
    />

    
    <!-- Input numero con spinner custom -->
    <BaseInput 
        type="number"
        min={0}
        max={100}
        placeholder="Inserisci un numero"
        showCounter={false}
    />
    
    <!-- Textarea (textbox) -->
    <BaseInput 
        type="textbox"
        placeholder="Scrivi qui il tuo messaggio"
        maxLength={500}
        showCounter={true}
        animatedLabel={true}
        required={true}
    />
    
    <!-- Input con mask (es. telefono) -->
    <BaseInput 
        type="tel"
        mask="(999) 999-9999"
        placeholder="Numero di telefono"
        pattern="^\(\d{3}\) \d{3}-\d{4}$"
    />
    
</body>
</html>
